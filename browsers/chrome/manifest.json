{
  "manifest_version": 2,

  "name": "Linkhack Offline",
  "description": "This extension allow linkhack redirections even without access to the server",
  "version": "1.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background": {"scripts":["lib/jquery.js", "background.js"]},
  "permissions": [
    "storage",
    "alarms",
    "webRequest",
    "webRequestBlocking",
    "*://go/*",
    "*://www.go/*"
  ]
}
